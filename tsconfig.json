{
	"compilerOptions": {
		"incremental": true,
		"target": "ES2022",
		"module": "CommonJS",
		"lib": ["dom", "es2022"],
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"skipLibCheck": true,
		"strict": true,
		"sourceMap": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"allowJs": true,
		"noImplicitAny": false,
		"noEmit": true,
		"baseUrl": ".",
		"paths": {
			"*": ["node_modules/*"],
			"react": ["./node_modules/@types/react"],
			"@erwb/*": ["packages/*/src"]
		}
	},
	"include": ["*/**/src/**/*", "*/**/__tests__/**/*", "packages/frontend/hooks/useWL.tsx"],
	"exclude": ["node_modules"],
	"references": [
		{ "path": "./tsconfig.node.json" },
		{ "path": "./tsconfig.web.json" }
	]
}
