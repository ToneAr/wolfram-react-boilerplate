{
	"name": "@wrb/electron",
	"version": "1.0.0",
	"description": "WRB Sub-package: Electron",
	"repository": "git+https://github.com/ToneAr/wolfram-react-boilerplate",
	"author": "Antonis Aristeidou <tonya@wolfram.com>",
	"main": "out/app/src/main/main.js",
	"private": true,
	"scripts": {
		"format": "prettier --write .",
		"lint": "eslint . --fix",

		"typecheck:node": "tsc --noEmit -p ../../tsconfig.node.json --composite false",
		"typecheck:web": "tsc --noEmit -p ../../tsconfig.web.json --composite false",
		"typecheck": "yarn typecheck:node && yarn typecheck:web",

		"start": "electron-vite preview",

		"dev": "electron-vite dev",

		"build": "yarn typecheck && electron-vite build",
		"build:unpack": "yarn build && electron-builder --dir",
		"build:win": "yarn build && electron-builder --win",
		"build:mac": "electron-vite build && electron-builder --mac",
		"build:linux": "electron-vite build && electron-builder --linux"
	},
	"build": {
		"productName": "WRB Example Project",
		"extraMetadata": {
			"version": "1.0.0"
		},
		"appId": "WRBExampleProject",
		"asar": true,
		"asarUnpack": "**\\*.{node,dll}",
		"files": [
			"node_modules",
			"package.json",
			"out/app"
		],
		"afterSign": ".osx/notarize.js",
		"mac": {
			"target": {
				"target": "default",
				"arch": [
					"arm64",
					"x64"
				]
			},
			"type": "distribution",
			"hardenedRuntime": true,
			"entitlements": ".osx/entitlements.mac.plist",
			"entitlementsInherit": ".osx/entitlements.mac.plist",
			"gatekeeperAssess": false
		},
		"dmg": {
			"contents": [
				{
					"x": 130,
					"y": 220
				},
				{
					"x": 410,
					"y": 220,
					"type": "link",
					"path": "/Applications"
				}
			]
		},
		"win": {
			"target": [
				"nsis"
			]
		},
		"linux": {
			"target": [
				"AppImage"
			],
			"category": "Development"
		},
		"directories": {
			"buildResources": "../../node_modules/@wrb/frontend/assets",
			"output": "out/build"
		},
		"extraResources": [
			{
				"from": "../../node_modules/@wrb/frontend/assets",
				"to": "assets",
				"filter": ["**/*"]
			},
			{
				"from": "../../node_modules/@wrb/wl",
				"to": "node_modules/@wrb/wl",
				"filter": ["**/*"]
			}
		],
		"extraFiles": [],
		"publish": {
			"provider": "github",
			"owner": "ToneAr",
			"repo": "electron-react-wl-boilerplate"
		}
	},
	"electronmon": {
		"patterns": [
			"!**/**",
			"**/main/*"
		],
		"logLevel": "quiet"
	},
	"dependencies": {
		"@wrb/wl": "*",
		"@wrb/frontend": "*"
	},
	"devDependencies": {
		"@electron/notarize": "^2.1.0",
		"@vitejs/plugin-react": "^4.3.1",
		"concurrently": "^8.2.1",
		"@types/detect-port": "^1.3.5",
		"core-js": "^3.32.2",
		"detect-port": "^1.5.1",
		"electron": "31.5.0",
		"electron-builder": "^24.13.3",
		"electron-devtools-installer": "^3.2.0",
		"electron-packager": "^17.1.2",
		"electron-vite": "^2.3.0",
		"electron-debug": "^3.2.0",
		"electron-log": "^5.2.0",
		"electron-updater": "^6.1.7",
		"electronmon": "^2.0.2",
		"file-loader": "^6.2.0",
		"identity-obj-proxy": "^3.0.0"
	},
	"license": "MIT"
}
