{
	"name": "@erwb/electron",
	"version": "0.9.0",
	"description": "Electron + React + TS + WL",
	"repository": "git+https://github.com/ToneAr/electron-react-wl-boilerplate",
	"author": "Antonis Aristeidou <tonya@wolfram.com>",
	"main": "out/app/src/main/main.js",
	"scripts": {
		"format": "prettier --write .",
		"lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
		"typecheck:node": "tsc --noEmit -p ../../tsconfig.node.json --composite false",
		"typecheck:web": "tsc --noEmit -p ../../tsconfig.web.json --composite false",
		"typecheck": "yarn typecheck:node && yarn typecheck:web",
		"start": "electron-vite preview",
		"dev": "electron-vite dev",
		"build:web": "yarn typecheck && cross-env vite build",
		"build": "yarn typecheck && electron-vite build",
		"build:unpack": "yarn build && electron-builder --dir",
		"build:win": "yarn build && electron-builder --win",
		"build:mac": "electron-vite build && electron-builder --mac",
		"build:linux": "electron-vite build && electron-builder --linux"
	},
	"build": {
		"productName": "Electron + React + WL",
		"extraMetadata": {
			"version": "2.0.0"
		},
		"appId": "ElectronWLReact",
		"asar": true,
		"asarUnpack": "**\\*.{node,dll}",
		"files": [
			"node_modules",
			"package.json",
			"out/app"
		],
		"afterSign": "scripts/notarize.js",
		"mac": {
			"target": {
				"target": "default",
				"arch": [
					"arm64",
					"x64"
				]
			},
			"type": "distribution",
			"hardenedRuntime": true,
			"entitlements": ".osx/entitlements.mac.plist",
			"entitlementsInherit": ".osx/entitlements.mac.plist",
			"gatekeeperAssess": false
		},
		"dmg": {
			"contents": [
				{
					"x": 130,
					"y": 220
				},
				{
					"x": 410,
					"y": 220,
					"type": "link",
					"path": "/Applications"
				}
			]
		},
		"win": {
			"target": [
				"nsis"
			]
		},
		"linux": {
			"target": [
				"AppImage"
			],
			"category": "Development"
		},
		"directories": {
			"buildResources": "../../node_modules/@erwb/frontend/assets",
			"output": "out/build"
		},
		"extraResources": [
			{
				"from": "../../node_modules/@erwb/frontend/assets",
				"to": "assets",
				"filter": ["**/*"]
			},
			{
				"from": "../../node_modules/@erwb/wl",
				"to": "node_modules/@erwb/wl",
				"filter": ["**/*"]
			}
		],
		"extraFiles": [],
		"publish": {
			"provider": "github",
			"owner": "ToneAr",
			"repo": "electron-react-wl-boilerplate"
		}
	},
	"electronmon": {
		"patterns": [
			"!**/**",
			"**/main/*"
		],
		"logLevel": "quiet"
	},
	"dependencies": {
		"@types/detect-port": "^1.3.5",
		"electron-debug": "^3.2.0",
		"electron-log": "^5.2.0",
		"electron-updater": "^6.1.7",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"tsc": "^2.0.4",
		"typescript": "^5.6.0",
		"vite": "^5.4.5",
		"vite-plugin-svgr": "^4.2.0"
	},
	"devDependencies": {
		"@electron/notarize": "^2.1.0",
		"@vitejs/plugin-react": "^4.3.1",
		"concurrently": "^8.2.1",
		"core-js": "^3.32.2",
		"cross-env": "^7.0.3",
		"detect-port": "^1.5.1",
		"electron": "31.5.0",
		"electron-builder": "^24.13.3",
		"electron-devtools-installer": "^3.2.0",
		"electron-packager": "^17.1.2",
		"electron-vite": "^2.3.0",
		"electronmon": "^2.0.2",
		"file-loader": "^6.2.0",
		"identity-obj-proxy": "^3.0.0",
		"ts-node": "^10.9.2"
	},
	"peerDependancies": {
		"@erwb/wl": "*",
		"@erwb/frontend": "*",
		"@electron-toolkit/eslint-config-prettier": "*",
		"@electron-toolkit/eslint-config-ts": "*",
		"@electron-toolkit/preload": "*",
		"@electron-toolkit/tsconfig": "*",
		"@electron-toolkit/utils": "*",
		"@eslint/eslintrc": "*",
		"@eslint/js": "*",
		"@testing-library/jest-dom": "*",
		"@testing-library/react": "*",
		"@types/jest": "*",
		"@types/node": "*",
		"@types/react": "*",
		"@types/react-dom": "*",
		"@types/react-test-renderer": "*",
		"@typescript-eslint/eslint-plugin": "*",
		"@typescript-eslint/parser": "*",
		"eslint": "*",
		"eslint-config-airbnb-base": "*",
		"eslint-import-resolver-typescript": "*",
		"eslint-plugin-compat": "*",
		"eslint-plugin-import": "*",
		"eslint-plugin-jest": "*",
		"eslint-plugin-jsx-a11y": "*",
		"eslint-plugin-promise": "*",
		"eslint-plugin-react": "*",
		"eslint-plugin-react-hooks": "*",
		"globals": "*",
		"jest": "*",
		"prettier": "*",
		"tsx": "*"
	},
	"license": "MIT"
}
