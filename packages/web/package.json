{
	"name": "@wrb/web",
	"version": "1.0.0",
	"private": true,
	"description": "WRB Sub-package: Web",
	"repository": "git+https://github.com/ToneAr/wolfram-react-boilerplate",
	"author": "Antonis Aristeidou <tonya@wolfram.com>",
	"contributors": [],
	"main": "build/index.html",
	"source": "src/renderer/index.html",
	"domain": "wreltech.wolfram.com",
	"scripts": {
"format": "prettier --write .",
		"lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
		"typecheck:node": "tsc --noEmit -p ../../tsconfig.node.json --composite false",
		"typecheck:web": "tsc --noEmit -p ../../tsconfig.web.json --composite false",
		"typecheck": "yarn typecheck:node && yarn typecheck:web",
		"start": "concurrently \"yarn start:server\" \"yarn start:client\"",
		"start:client": "vite",
		"start:server": "cross-env NODE_ENV=production pm2 start ./build/src/main/server.js --name \"wrb-web-ipc\"",
		"dev": "concurrently \"yarn dev:server\" \"yarn dev:client\"",
		"dev:client": "cross-env NODE_ENV=development vite dev",
		"dev:server": "cross-env NODE_ENV=development nodemon",
		"build": "yarn build:client && yarn build:server",
		"build:client": "yarn typecheck:web && vite build",
		"build:server": "yarn typecheck:node && tsc -p ./tsconfig.node.json",
		"preview": "yarn build && concurrently \"yarn dev:server\" \"vite preview\""
	},
	"dependencies": {
		"@wrb/frontend": "*",
		"@wrb/wl": "*",
		"express": "^4.21.0",
		"react-favicon": "^2.0.7",
		"socket.io": "^4.7.5",
		"socket.io-client": "^4.7.5"
	},
	"devDependencies": {
		"@types/express": "^4.17.21",
		"@types/socket.io": "^3.0.2",
		"@types/socket.io-client": "^3.0.0",
		"nodemon": "^3.1.4",
		"vite": "^5.4.5",
		"vite-tsconfig-paths": "^5.0.1",
		"ts-node": "^10.9.2"
	}
}
