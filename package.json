{
	"name": "@wrb/wrb",
	"version": "2.0.0",
	"description": "A monorepo for deployment of cross platform applications to desktop using electron vite or to the web using web sockets",
	"repository": "git+https://github.com/ToneAr/wolfram-react-boilerplate",
	"author": "Antonis Aristeidou <tonya@wolfram.com>",
	"private": true,
	"scripts": {
		"format": "prettier --write .",
		"lint": "eslint . --fix",
		"test": "yarn workspace @wrb/frontend test",
		"dev:electron": "yarn workspace @wrb/electron dev",
		"dev:web": "yarn workspace @wrb/web dev",
		"build:web": "yarn workspace @wrb/web build",
		"build:electron": "yarn workspace @wrb/electron build",
		"package:linux": "yarn workspace @wrb/electron build:linux",
		"package:win": "yarn workspace @wrb/electron build:win",
		"package:mac": "yarn workspace @wrb/electron build:mac",
		"start:electron": "yarn workspace @wrb/electron start",
		"start:web": "yarn workspace @wrb/web start",
		"start:wl": "yarn workspace @wrb/wl start"
	},
	"workspaces": [
		"packages/*"
	],
	"prettier": {
		"singleQuote": true,
		"overrides": [
			{
				"files": [
					".prettierrc"
				],
				"options": {
					"parser": "json"
				}
			}
		]
	},
	"license": "MIT",
	"dependencies": {
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"react-router-dom": "^6.26.2",
		"globals": "^15.9.0"
	},
	"devDependencies": {
		"@electron-toolkit/eslint-config-prettier": "^2.0.0",
		"@electron-toolkit/eslint-config-ts": "^2.0.0",
		"@electron-toolkit/preload": "^3.0.1",
		"@electron-toolkit/tsconfig": "^1.0.1",
		"@electron-toolkit/utils": "^3.0.0",
		"@eslint/eslintrc": "^3.1.0",
		"@eslint/js": "^9.10.0",
		"@types/node": "^20.14.8",
		"@types/react": "^18.3.3",
		"@types/react-dom": "^18.3.0",
		"@types/react-test-renderer": "^18.0.1",
		"@typescript-eslint/eslint-plugin": "^8.5.0",
		"@typescript-eslint/parser": "^8.5.0",
		"concurrently": "^9.0.1",
		"eslint": "^8.2.0",
		"eslint-import-resolver-typescript": "^3.6.0",
		"eslint-plugin-compat": "^4.2.0",
		"eslint-plugin-import": "^2.28.1",
		"eslint-plugin-jest": "^27.4.0",
		"eslint-plugin-jsx-a11y": "^6.7.1",
		"eslint-plugin-promise": "^6.1.1",
		"eslint-plugin-react": "^7.36.1",
		"eslint-plugin-react-hooks": "^4.6.0",
		"prettier": "^3.3.3",
		"tsx": "^4.19.1",
		"typescript": "^5.6.0",
		"cross-env": "^7.0.3",
		"vite-plugin-svgr": "^4.2.0",
		"vite-plugin-dts": "^4.2.1",
		"@vitejs/plugin-react": "^4.3.1",
		"@vituum/vite-plugin-postcss": "^1.1.0"
	}
}
